  <script>//<![CDATA[
    $(document).ready(function() {
      $('.post-comment').click(function(e) {
        e.preventDefault()
        $('html, body').stop().animate({
          scrollTop: ($('#comments').offset().top) - 50
        }, 'slow')
      })
      $('.avatar-image-container img').attr('src', function(o, n) {
        return n.replace('//img1.blogblog.com/img/blank.gif', 'https://lh3.googleusercontent.com/zFdxGE77vvD2w5xHy6jkVuElKv-U9_9qLkRYK8OnbDeJPtjSZ82UPq5w6hJ-SA=s40')
      })
      var o = $('#comment-editor-src').attr('href');

      function n(n, t) {
        $(n).each(function() {
          var n = $(this);
          n.on('click', function(e) {
            e.preventDefault()
            $('.comment-actions').show()
            let c = n.parents(t).attr('id').substr(1),
              m = o.split('?');
            $('#comment-editor')[0].src = m[0] + '?parentID=' + c + '&' + m[1]
            $('#comment-editor').appendTo('.commentForm')
            n.parent().hide()
            n.parents('li').append($('.comment-form')[0])
          })
        })
      }
      $(".comment-block[id]").length ? n("a[o='r']", ".comment-block") : n(".comment-reply", "li")
      $('#comments a.comment-reply').click(function() {
        $('#comments .comment-form').css('margin-left', '50px')
      })
    })
  //]]></script>
